NAME := fdf

# Source files
SRC := main.c 0_ch_in_err.c

# Directories
SRC_DIR := src
OBJ_DIR := bin

# Libraries
LIB_DIR := libft
MLX_DIR := mlx
LIB := libft.a
MLX := mlx.a

# Variables
OBJ := $(SRC:.c=.o)

# Variables with path
SRCS := $(addprefix ./$(SRC_DIR)/, $(SRC))
OBJS := $(addprefix ./$(OBJ_DIR)/, $(OBJ))

# Flags, libraries, include
# Several compile modes are defined: no flags, debug, standard
ifdef MODE
ifeq ($(MODE), no)
endif
ifeq ($(MODE), debug)
	CFLAGS = -g
endif
else
	CFLAGS = -Wall -Wextra -Werror
endif

CFLAGS_MLX = -L./mlx -lmlx -framework OpenGL -framework AppKit

all: $(NAME)

# Creates library and index
$(NAME): $(OBJS)
	make -C $(LIB_DIR) MODE=$(CFLAGS)
	make -C $(MLX_DIR)
	gcc $(CFLAGS) $(CFLAGS_MLX) -o $(NAME) $(SRCS) ./$(LIB_DIR)/$(LIB) ./$(MLX_DIR)/$(MLX)

clean:
	make -C $(LIB_DIR) clean
	make -C $(MLX_DIR) clean
	/bin/rm -f $(OBJS)

fclean: clean
	make -C $(LIB_DIR) fclean
	make -C $(MLX_DIR) fclean
	/bin/rm -f $(NAME)

re: fclean all

# Non-file targets
.PHONY: all, re, clean, fclean
